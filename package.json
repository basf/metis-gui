{
	"name": "metis-gui",
	"version": "0.6.5",
	"private": true,
	"scripts": {
		"build": "npm run clean && env BROWSERSLIST_CONFIG=./package.json rollup -c",
		"build:light": "npm run clean && env BROWSERSLIST_CONFIG=./package.json rollup -c --light_mode",
		"dev": "npm run clean && env BROWSERSLIST_CONFIG=./package.json rollup -c -w",
		"dev:light": "npm run clean && env BROWSERSLIST_CONFIG=./package.json rollup -c -w --light_mode",
		"start": "sirv dist --single",
		"validate": "svelte-check",
		"format": "prettier --write src",
		"lint": "eslint src",
		"lint:fix": "eslint src --fix",
		"test": "jest src",
		"test:watch": "npm run test -- --watch",
		"size": "size-limit",
		"clean": "mkdir -p ./dist && find ./dist/ -type f -delete",
		"husky:init": "npx husky install",
		"optimade-prefetch": "node node_modules/optimade/prefetch.js"
	},
	"engines": {
		"node": ">= 14"
	},
	"browserslist": [
		"extends browserslist-config-google"
	],
	"size-limit": [
		{
			"name": "Legacy bundle size",
			"limit": "130 KB",
			"path": "dist/bundle.js"
		}
	],
	"prettier": {
		"tabWidth": 4,
		"semi": true,
		"singleQuote": true,
		"svelteSortOrder": "options-markup-scripts-styles",
		"svelteStrictMode": false,
		"svelteBracketNewLine": true,
		"svelteAllowShorthand": true,
		"svelteIndentScriptAndStyle": true,
		"plugins": [
			"svelte"
		]
	},
	"devDependencies": {
		"@babel/core": "^7.14.6",
		"@babel/plugin-proposal-optional-chaining": "^7.14.5",
		"@babel/plugin-transform-runtime": "^7.14.5",
		"@babel/preset-env": "^7.14.7",
		"@babel/runtime": "^7.14.6",
		"@ctrl/tinycolor": "^4.0.2",
		"@rollup/plugin-babel": "^5.3.0",
		"@rollup/plugin-commonjs": "^19.0.0",
		"@rollup/plugin-json": "^4.1.0",
		"@rollup/plugin-node-resolve": "^13.0.0",
		"@rollup/plugin-replace": "^2.4.2",
		"@rollup/plugin-typescript": "^8.2.1",
		"@rollup/plugin-url": "^6.0.0",
		"@size-limit/preset-app": "^4.12.0",
		"@testing-library/jest-dom": "^5.14.1",
		"@testing-library/svelte": "^3.0.3",
		"@tsconfig/svelte": "^2.0.1",
		"@types/d3-scale": "^4.0.2",
		"@types/jest": "^27.0.0",
		"@types/node": "^15.12.4",
		"@typescript-eslint/eslint-plugin": "^4.28.0",
		"@typescript-eslint/parser": "^4.28.0",
		"autoprefixer": "^10.2.6",
		"babel-jest": "^27.0.5",
		"browserslist-config-google": "latest",
		"core-js": "^3.15.1",
		"eslint": "^7.29.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^3.4.0",
		"eslint-plugin-svelte3": "^3.2.0",
		"eslint-svelte3-preprocess": "0.0.5",
		"husky": "^7.0.4",
		"jest": "^27.0.5",
		"postcss": "^8.3.5",
		"postcss-flexbugs-fixes": "^5.0.2",
		"postcss-import": "^14.0.2",
		"postcss-load-config": "^3.1.0",
		"postcss-preset-env": "^7.3.0",
		"postcss-url": "^10.1.3",
		"prettier": "^2.3.1",
		"prettier-plugin-svelte": "^2.3.1",
		"rollup": "^2.52.2",
		"rollup-plugin-bundle-html-plus": "^1.4.0",
		"rollup-plugin-copy": "^3.4.0",
		"rollup-plugin-css-only": "^3.1.0",
		"rollup-plugin-import-resolver": "^1.2.1",
		"rollup-plugin-inline-svg": "^2.0.0",
		"rollup-plugin-livereload": "^2.0.0",
		"rollup-plugin-manifest-json": "^1.5.1",
		"rollup-plugin-svelte": "^7.1.0",
		"rollup-plugin-terser": "^7.0.2",
		"rollup-plugin-visualizer": "^5.9.0",
		"sass": "^1.43.3",
		"size-limit": "^4.12.0",
		"svelte": "^3.38.3",
		"svelte-asyncable": "^2.1.0",
		"svelte-check": "^2.2.0",
		"svelte-component-budget": "^1.1.0",
		"svelte-content-loader": "^1.1.3",
		"svelte-jester": "^2.0.1",
		"svelte-pathfinder": "3.3.0",
		"svelte-preprocess": "^4.7.3",
		"svelte-preprocess-cssmodules": "^2.0.2",
		"svelte-spectre": "^0.4.17",
		"svelte-statusable": "^1.0.2",
		"svelte-streamable": "^2.3.0",
		"svelte-viewpoint": "^1.4.3",
		"ts-jest": "^27.0.3",
		"tslib": "^2.5.2",
		"typescript": "^4.3.4",
		"zip-dir": "^2.0.0"
	},
	"dependencies": {
		"codejar": "^3.5.0",
		"d3-scale": "^4.0.2",
		"debounce-promise": "^3.1.2",
		"optimade": "^2.1.0",
		"optimade-mpds-nlp": "^0.1.3",
		"sirv-cli": "^1.0.12",
		"svelte-file-dropzone": "0.0.15",
		"tinycolor2": "^1.4.2"
	}
}
